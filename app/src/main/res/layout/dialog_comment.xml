<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/x562"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_comment_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x24"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginTop="@dimen/y32"
            android:layout_marginEnd="@dimen/x24"
            android:layout_marginRight="@dimen/x24"
            android:layout_marginBottom="@dimen/y32"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/x8"
            android:textColor="@color/color333"
            android:textSize="@dimen/x32"
            tools:text="hintText" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="@color/colorDividingLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_comment_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/comment_confirm"
                android:textColor="@color/color333"
                android:textSize="@dimen/x28" />

            <View
                android:layout_width="@dimen/x1"
                android:layout_height="match_parent"
                android:background="@color/colorDividingLine" />

            <TextView
                android:id="@+id/tv_dialog_comment_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/comment_cancel"
                android:textColor="@color/color333"
                android:textSize="@dimen/x28" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>